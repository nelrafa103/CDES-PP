---
import Layout from '../layouts/Layout.astro';
import BibliotecaSearch from '@/components/BibliotecaSearch';
---

<Layout>
    <main class="min-h-screen bg-background py-16">
        <div class="container mx-auto max-w-7xl px-6">
            <!-- Header -->
            <div class="text-center mb-12">
                <h1 class="text-4xl font-bold mb-4 font-raleway">
                    Biblioteca Virtual CDES
                </h1>
                <p class="text-muted-foreground text-lg font-noto">
                    Accede a nuestra colección de documentos, estudios y publicaciones sobre el desarrollo estratégico de Santiago
                </p>
            </div>

            <!-- Componente de búsqueda y resultados -->
            <BibliotecaSearch client:load />
        </div>
    </main>
</Layout>